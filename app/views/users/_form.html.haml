.modal-dialog
  .modal-content
    .modal-body
      .panel.panel-smart
        .panel-heading
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h3.panel-title 
            Sign Up 
        .panel-body  
          = bootstrap_form_for user, url: sign_up_path, remote: true, layout: :horizontal do |f|
            = f.text_field :name, label: 'User Name:',label_col: "col-sm-4", control_col: "col-sm-5"
            = f.email_field :email, label: "*Email Address:" ,label_col: "col-sm-4", control_col: "col-sm-5"
            = f.password_field :password, label:'*Password:', label_col: "col-sm-4", control_col: "col-sm-5"
            = f.password_field :password_confirmation, label: "Confirm Password:", label_col: "col-sm-4", control_col: "col-sm-5"
            = token_tag
            = f.submit 'Sign Up', class: 'btn btn-update' , remote: true